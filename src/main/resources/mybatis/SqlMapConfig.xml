<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--配置开关-->
    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>
    <!--单个定义别名-->
    <typeAliases>
        <package name="com.hy.ssm.bean"></package>
    </typeAliases>

    <!--加载sql映射文件-->
    <mappers>
        <mapper resource="com/hy/ssm/mapper/StudentMapper.xml"></mapper>
    </mappers>
</configuration>